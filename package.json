{
  "name": "react-webpack2-typescript-hmr",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "devDependencies": {
    "@types/webpack-env": "^1.13.0",
    "css-loader": "^0.26.1",
    "extract-text-webpack-plugin": "^2.0.0-rc.2",
    "html-webpack-plugin": "^2.28.0",
    "react-hot-loader": "^3.0.0-beta.6",
    "style-loader": "^0.13.1",
    "ts-loader": "^2.0.0",
    "typescript": "^2.1.5",
    "webpack": "^2.2.1",
    "file-loader": "^0.11.2",
    "url-loader": "^0.5.9",
    "webpack-dev-server": "^2.3.0",
    "webpack-hot-middleware": "^2.16.1"
  },
  "scripts": {
    "start": "webpack-dev-server --watch-poll --https",
    "start-local": "webpack-dev-server --config webpack.local.config.js",
    "new-scratch-org": "sfdx force:org:create -f config/project-scratch-def.json -a scratch",

    "make-scratch-default": "sfdx force:config:set defaultusername=scratch",
    "make-dev-default": "sfdx force:config:set defaultusername=dev",
    "make-prod-default": "sfdx force:config:set defaultusername=prod",
    
    "bundle-app-dev": "webpack && npm run copy-bundle",
    "bundle-ap-prod": "webpack --config webpack.prod.config.js && npm run copy-bundle",
    "copy-bundle": "cp ./dist/app.js ./force-app/main/default/staticresources/App.resource",
    "package-sfdc": "sfdx force:source:convert -d ./dist/sfdc-package",
    "build-dev": "npm run bundle-app-dev && npm run package-sfdc",
    "build-prod": "npm run bundle-ap-prod && npm run package-sfdc",

    "push-dev": "sfdx force:mdapi:deploy -u dev -d ./dist/sfdc-package -w 1000",

    "push-scratch": "sfdx force:source:push -u scratch",
    "push-prod": "sfdx force:mdapi:deploy -u production -d ./dist/sfdc-package -w 1000",
    "deploy-dev": "npm run build-dev && npm run push-dev",
    "deploy-scratch": "npm run build-dev && npm run push-scratch",
    "deploy-prod": "npm run build-prod && npm run push-prod"
  },
  "dependencies": {
    "@types/react": "^15.0.6",
    "@types/react-dom": "^0.14.22",
    "axios": "^0.16.2",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
